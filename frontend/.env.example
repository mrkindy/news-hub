# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Authentication
VITE_JWT_SECRET_KEY=your-secret-key-here

# External APIs (News Sources)
VITE_NEWS_API_KEY=your-news-api-key-here
VITE_GUARDIAN_API_KEY=your-guardian-api-key-here
VITE_NYT_API_KEY=your-new-york-times-api-key-here

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXX-X
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE_MODE=true

# Application Settings
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_THEME=light
VITE_ARTICLES_PER_PAGE=12
VITE_CACHE_DURATION=300000

# Development Settings
VITE_APP_ENV=development
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# Production Settings (Override in production)
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_APP_ENV=production
# VITE_DEBUG_MODE=false
# VITE_ENABLE_DEVTOOLS=false
