# ============================================================================
# NEWS HUB - LARAVEL News Hub API
# ============================================================================
# Complete environment configuration for the News Hub application.
# Copy this file to .env and configure the values according to your setup.
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="News Hub"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
BCRYPT_ROUNDS=12

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000,localhost:5173
SANCTUM_GUARD=web

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (Default - Simple setup)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL/PostgreSQL (Production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=news_hub
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================
CACHE_STORE=database
CACHE_PREFIX=news_hub

# Redis Configuration (Optional - for enhanced performance)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# ============================================================================
# FILE STORAGE
# ============================================================================
FILESYSTEM_DISK=local

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@newshub.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# AWS SERVICES (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# NEWS API CONFIGURATION
# ============================================================================
# External news sources API keys. Get your keys from:
# Guardian: https://open-platform.theguardian.com/access/
# New York Times: https://developer.nytimes.com/
# NewsOrg: https://newsapi.org/
#
# Note: The system will work with any combination of these keys.
# Missing keys will simply skip that source during news fetching.
# ============================================================================

# Guardian News API
GUARDIAN_API_KEY=your_guardian_api_key_here

# New York Times API
NYTIMES_API_KEY=your_nytimes_api_key_here

# NewsOrg API
NEWSORG_API_KEY=your_newsorg_api_key_here

# ============================================================================
# API DOCUMENTATION
# ============================================================================
# Swagger/OpenAPI Documentation Settings
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_CONST_HOST="${APP_URL}"

# ============================================================================
# FRONTEND INTEGRATION
# ============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}/api/v1"

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Cache TTL settings (in seconds)
CACHE_TTL_ARTICLES=1800        # 30 minutes
CACHE_TTL_CATEGORIES=86400     # 24 hours
CACHE_TTL_SOURCES=86400        # 24 hours
CACHE_TTL_AUTHORS=43200        # 12 hours
CACHE_TTL_FEED=900             # 15 minutes

# News fetching limits
NEWS_MAX_ARTICLES_PER_SOURCE=50
NEWS_REQUEST_TIMEOUT=30

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Debugging and development tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Uncomment and configure for production deployment
# APP_ENV=production
# APP_DEBUG=false
# LOG_LEVEL=warning
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
